<div class="well">
    <%= link_to fa_icon('user', text: 'Show'), @user, class: "btn btn-success" %>
    <%= link_to fa_icon('undo', text: 'Back'), users_path, class: "btn btn-default" %>
</div>
<div class="panel panel-default">
    <div class="panel-heading">

        <h2 class="panel-title">Edit <%= resource_name.to_s.humanize %></h2>
    </div>
    <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "form-horizontal", :role => "form", method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group field">
                <%= f.label :email, :class => "col-sm-2 control-label"%>
                <div class="col-sm-10">
                    <%= f.email_field :email, autofocus: true, :class => "form-control input-large", :rows => 20 %>
                </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group">
                <%= f.label :password, :class => "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.password_field :password, autocomplete: "off", :class => "form-control input-large", :rows => 20 %>
                    <i>(leave blank if you don't want to change it)</i>
                </div>

            </div>

            <div class="form-group">
                <%= f.label :password_confirmation, :class => "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-large", :rows => 20 %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :current_password, :class => "col-sm-2 control-label" %>
                <div class="col-sm-10">
                    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control input-large", :rows => 20 %>
                    <i>(we need your current password to confirm your changes)</i>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-11">
                    <%= f.submit "Update", :class => "btn btn-success" %>
                </div>
            </div>
        <% end %>

        <div class="well">

            <h3>Cancel my account</h3>

            <p>Zombies don't make you happy anymore? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-danger btn-lg" %></p>
        </div>

    </div>
</div>

