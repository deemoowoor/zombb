<%= form_for [@post, @post.post_comments.build],
    :html => { :class => "form-horizontal", :role => "form" } do |f| %>
    <% if @post.errors.any? %>
        <div id="alert alert-danger error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this comment from being saved:</h2>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.text_area :text, :class => "form-control input-large", :rows => 10 %>
    </div>
    <div class="form-group clearfix">
        <%= f.submit :class => "btn btn-success" %>
    </div>
<% end %>
